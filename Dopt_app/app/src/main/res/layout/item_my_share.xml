<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/white_all_radius">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_animal_share_img_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_animal_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/dog_num_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_animal_share_week_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:text="1주차"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_animal_share_img_cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_animal_share_shelter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:text="채현 보호소"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_animal_share_week_tv"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_animal_share_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:text="입양한 멍멍이의 성장과정 1"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/item_animal_share_img_cardView"
        app:layout_constraintTop_toBottomOf="@+id/item_animal_share_week_tv" />
    <TextView
        android:id="@+id/item_animal_share_whatdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:text="업로드 날짜 :"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/item_animal_share_img_cardView"
        app:layout_constraintTop_toBottomOf="@+id/item_animal_share_title_tv" />

    <TextView
        android:id="@+id/item_animal_share_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:text="2022 06 09"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/item_animal_share_whatdate_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_animal_share_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>