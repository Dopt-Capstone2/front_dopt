<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/prefer_gender_tt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/prefer_gender"
        android:layout_marginTop="76dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/prefer_gender_img"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/prefer_gender_img"
        android:layout_margin="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/prefer_gender_tt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/gender_m_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/m_round_on"
        app:layout_constraintTop_toBottomOf="@+id/prefer_gender_img"
        app:layout_constraintStart_toStartOf="@+id/prefer_gender_img"
        app:layout_constraintEnd_toStartOf="@id/gender_f_btn"/>


    <ImageView
        android:id="@+id/gender_f_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/f_round_off"
        app:layout_constraintEnd_toEndOf="@id/prefer_gender_img"
        app:layout_constraintStart_toEndOf="@id/gender_m_btn"
        app:layout_constraintTop_toBottomOf="@id/prefer_gender_img"/>

    <TextView
        android:id="@+id/gender_previous_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_m_btn"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:background="@drawable/bg_previous_btn"
        android:text="이전"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/gender_next_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_previous_btn"
        android:gravity="center"
        android:text="다음"
        android:textColor="@color/main_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_f_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>
