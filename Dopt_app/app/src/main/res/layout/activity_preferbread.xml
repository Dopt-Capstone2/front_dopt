<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/prefer_kind_tt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/prefer_bread"
        android:layout_marginTop="76dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/prefer_kind_img"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/prefer_bread_img"
        android:layout_margin="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/prefer_kind_tt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Spinner
        android:id="@+id/dog_breed_sp"
        app:layout_constraintTop_toBottomOf="@id/prefer_kind_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="35dp"
        android:spinnerMode="dialog"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_spinner"
        android:dropDownWidth="50dp" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/dog_breed_sp"
        app:layout_constraintBottom_toBottomOf="@id/dog_breed_sp"
        app:layout_constraintEnd_toEndOf="@id/dog_breed_sp"
        android:layout_marginEnd="10dp"
        android:layout_width="25dp"
        android:layout_height="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_right_yellow"/>

    <TextView
        android:id="@+id/breed_previous_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dog_breed_sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:background="@drawable/bg_previous_btn"
        android:text="이전"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/breed_next_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_previous_btn"
        android:gravity="center"
        android:text="다음"
        android:textColor="@color/main_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dog_breed_sp" />


</androidx.constraintlayout.widget.ConstraintLayout>
