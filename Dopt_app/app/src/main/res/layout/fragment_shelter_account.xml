<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/purple_bot_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/shelter_logo_img"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/dopt_white_logo"
        android:scaleType="fitStart"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호소"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/shelter_logo_img"
        app:layout_constraintBottom_toBottomOf="@id/shelter_logo_img"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_info_vp"
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:background="@drawable/purple_border_radius"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shelter_logo_img">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="21dp"
            android:src="@drawable/profile_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/shelter_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경주동물사랑보호센터"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/shelter_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="관리자:"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/shelter_name_tx"/>
        <TextView
            android:id="@+id/shelter_manager_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경주시"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/shelter_manager"
            app:layout_constraintTop_toBottomOf="@id/shelter_name_tx"/>

        <TextView
            android:id="@+id/shelter_place_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경상북도 경주시 천북면 천북로 8-4"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/purple_500"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/shelter_manager"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456@123.456"
            android:textColor="#707070"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/shelter_place_tx"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="450dp"
        android:background="@drawable/profile_menu_radius"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_info_vp">




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>