<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.ShelterJoinActivity"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/join_txt_img"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/shelter_join_img"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray3_color"
                android:text="Email"
                android:textSize="10sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shelter_join_email_jo"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:background="@drawable/puple_line_white_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray3_color"
                android:text="Password"
                android:textSize="10sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_pw_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shelter_join_pw_jo"
                    android:padding="10dp"
                    android:textColorHint="@color/gray2_color"
                    android:textColor="@color/black"
                    android:background="@drawable/puple_line_white_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray3_color"
                android:text="Shelter Name"
                android:textSize="10sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_nickNm_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_shelterNm_jo"
                    android:padding="10dp"
                    android:textColorHint="@color/gray2_color"
                    android:textColor="@color/black"
                    android:background="@drawable/puple_line_white_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray3_color"
                android:text="Shelter Phone"
                android:textSize="10sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_userLoc_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_phone_jo"
                    android:padding="10dp"
                    android:textColorHint="@color/gray2_color"
                    android:textColor="@color/black"
                    android:background="@drawable/puple_line_white_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray3_color"
                android:text="Shelter Location"
                android:textSize="10sp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/join_shelterLoc_box"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_shelterLoc_jo"
                    android:padding="10dp"
                    android:textColorHint="@color/gray2_color"
                    android:textColor="@color/black"
                    android:background="@drawable/puple_line_white_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/shelterJoinBtn"
                    android:text="보호소 회원가입"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/purple500_all_radius"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>